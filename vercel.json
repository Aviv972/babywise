{
    "version": 2,
    "builds": [
        {
            "src": "backend/api/index.py",
            "use": "@vercel/python",
            "config": {
                "runtime": "python3.12",
                "maxLambdaSize": "250mb",
                "includeFiles": [
                    "backend/**",
                    "static/**",
                    "frontend/**"
                ],
                "excludeFiles": [
                    "**/*.md",
                    "**/*.pyc",
                    "**/__pycache__/**",
                    "tests/**",
                    "**/*.test.py",
                    ".git/**",
                    ".github/**",
                    ".vscode/**"
                ],
                "memory": 1024,
                "maxDuration": 60,
                "installCommand": "pip install -r requirements-prod.txt"
            }
        },
        {
            "src": "frontend/**",
            "use": "@vercel/static"
        },
        {
            "src": "static/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        { "src": "/static/(.*)", "dest": "/static/$1" },
        { "src": "/api/warmup", "dest": "/backend/api/index.py" },
        { "src": "/api/routines/events/latest", "dest": "/backend/api/index.py" },
        { "src": "/api/routines/events(.*)", "dest": "/backend/api/index.py" },
        { "src": "/api/routines/(.*)", "dest": "/backend/api/index.py" },
        { "src": "/api/(.*)", "dest": "/backend/api/index.py" },
        { "src": "/(.*\\.(js|css|svg|png|jpg|jpeg|gif|ico))", "dest": "/frontend/$1" },
        { "src": "/(.*)", "dest": "/frontend/index.html" }
    ],
    "env": {
        "PYTHONPATH": ".",
        "PYTHONUNBUFFERED": "1",
        "STORAGE_URL": "redis://default:SKNzsYzhLZ3eInH78gk7EWYEtIlRf4fd@redis-10101.c135.eu-central-1-1.ec2.redns.redis-cloud.com:10101",
        "UPSTASH_REDIS_URL": "redis://default:SKNzsYzhLZ3eInH78gk7EWYEtIlRf4fd@redis-10101.c135.eu-central-1-1.ec2.redns.redis-cloud.com:10101"
    }
} 